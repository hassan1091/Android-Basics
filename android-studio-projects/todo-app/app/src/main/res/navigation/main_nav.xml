<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/list">

    <fragment
        android:id="@+id/list"
        android:name="com.datum.android.todoapp.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_list_to_editFragment"
            app:destination="@id/editFragment" />
    </fragment>


    <fragment
        android:id="@+id/editFragment"
        android:name="com.datum.android.todoapp.EditFragment"
        android:label="fragment_edit"
        tools:layout="@layout/fragment_edit" >
        <action
            android:id="@+id/action_editFragment_to_list"
            app:destination="@id/list" />
    </fragment>
</navigation>